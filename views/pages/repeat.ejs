<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body class="container">
    <!-- Above -->
    <div style="width: 430px;right: 1%;position: absolute;">
        <div class="alert alert-primary" role="alert">
            Welcome to Simple Interaction By Thiti 60090500410
        </div>
    </div>
    <!-- End Above -->
    <main>
        <div style="margin-top: 100px" class="row">
            <div class="col-12">
                <div class="float-left">

                    <% outputText.forEach(function(text) { %>
                        <h2 style="font-weight: normal;font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">
                            Husky : <span class="badge badge-dark"><%= text %></span></h2>
                    <% }); %>
                </div>
                <img style="height: 280px;"
                    src="https://cdn.pixabay.com/photo/2013/07/12/18/19/husky-153284__340.png"
                    class="rounded float-left" alt="...">
                <div class="float-left">
                    <div class="ml-2">
                        <div class="alert alert-dark text-center" role="alert">
                            Simple Interaction : Paths Below <img style="width: 10px;"
                                src="http://cdn.onlinewebfonts.com/svg/img_330091.png" />
                        </div>
                        <ul class="list-group text-center">
                            <li class="list-group-item">http://localhost:5000/</li>
                            <li class="list-group-item">http://localhost:<%= curPort %>/speak/[word]</li>
                            <li class="list-group-item active">http://localhost:<%= curPort %>/repeat/<%= query.word %>/<%= query.amount %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

</html>